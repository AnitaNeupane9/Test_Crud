@model IEnumerable<LMS.Models.Student>

<h1 class="text-center">Student Management</h1>
<hr />
<div class="container mt-4">
    <div class="row">
        <div class="col">
            <a class="btn btn-danger float-end mb-3" asp-action="AddEdit">Add New</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Full Name</th>
                        <th>Roll No</th>
                        <th>Class</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Address</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.FullName</td>
                            <td>@student.RollNo</td>
                            <td>@student.Class</td>
                            <td>@student.Email</td>
                            <td>@student.PhoneNumber</td>
                            <td>@student.Address</td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="AddEdit" asp-route-id="@student.Id">Edit</a>
                                <a class="btn btn-secondary btn-sm" asp-action="Detail" asp-route-id="@student.Id">Detail</a>
                                <a class="btn btn-danger btn-sm" asp-action="Remove" asp-route-id="@student.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
